<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paper Submission</title>
    <!-- Linking external CSS file -->
    <link rel="stylesheet" href="/All_CSS_Files/Conferences/CallForPaperSubmit/paperSubmitForm.css" />
</head>

<body>
    <header class="site-header">
        <nav class="navbar">
            <div class="logo"><img
                    src="https://th.bing.com/th?id=OIP.4ODzmrtz6jvopPie4ZrBwQHaGh&w=80&h=80&c=1&vt=10&bgcl=f53f20&r=0&o=6&pid=5.1"
                    alt="err"></div>
            <ul class="nav-menu">
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Papers</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main class="form-main">
        <div class="form-container">
            <h1>Submit Your Paper</h1>
            <form id="paperForm" method="POST" enctype="multipart/form-data">
                <label for="paperTitle">Paper Title:</label>
                <input type="text" id="paperTitle" name="paperTitle" required />

                <label for="paperAbstract">Paper Abstract:</label>
                <textarea id="paperAbstract" name="paperAbstract" required></textarea>

                <label for="keywords">Keywords:</label>
                <input type="text" id="keywords" name="keywords" required />

                <% const tracks=conference.track[0].split(","); %>
                    <label for="conferenceTrack">Conference Track:</label>
                    <select id="conferenceTrack" name="conferenceTrack" required>
                        <option value="select">Select</option>
                        <% tracks.forEach(option=> { %>
                            <option value="<%= option.trim() %>">
                                <%= option.trim() %>
                            </option>
                            <% }); %>
                    </select>
                    <!-- Author Section -->
                    <div id="authorSection">
                        <div class="author-section">
                            <label for="authorName">Author Name:</label>
                            <input type="text" name="authors[0][name]" required />

                            <label for="authorAffiliation">Author Affiliation:</label>
                            <input type="text" name="authors[0][affiliation]" required />

                            <label for="authorEmail">Author Email:</label>
                            <input type="email" name="authors[0][email]" required />
                        </div>
                    </div>

                    <button type="button" class="add-author-btn" onclick="addAuthor()">Add Another Author</button>

                    <label for="manuscript">Upload Manuscript:</label>
                    <input type="file" id="manuscript" name="paperFile" required />

                    <div class="form-footer">
                        <button type="submit" class="submit-btn">Submit Paper</button>
                    </div>
            </form>
        </div>
    </main>

    <footer class="site-footer">
        <p>&copy; Conference. All rights reserved.</p>
    </footer>


    <script src="/All_JAVASCRIPT_Files/Conferences/PaperSubmit/PaperForm.js"></script>
</body>

</html>