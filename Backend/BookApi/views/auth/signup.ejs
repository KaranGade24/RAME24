<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            width: 100%;
            padding: 10px;
            background: blue;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        button:hover {
            background: darkblue;
        }

        .error {
            color: red;
            font-size: 12px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Signup</h2>
        <form id="signupForm">
            <input type="text" id="username" placeholder="Username" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit">Sign Up</button>
            <p class="error" id="errorMessage"></p>
            <button id="login-button" onclick="window.location.href 
             ='/login-page'">Already Exist</button>
        </form>
    </div>




    <script>

        //sign Method
        document.getElementById("signupForm").addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent page reload

            const username = document.getElementById("username").value.trim();
            const email = document.getElementById("email").value.trim();
            const password = document.getElementById("password").value.trim();
            const errorMessage = document.getElementById("errorMessage");

            // Basic validation
            if (username.length < 3) {
                errorMessage.innerText = "Username must be at least 3 characters.";
                return;
            }
            if (!email.includes("@")) {
                errorMessage.innerText = "Invalid email address.";
                return;
            }
            // if (password.length < 6) {
            //     errorMessage.innerText = "Password must be at least 6 characters.";
            //     return;
            // }

            errorMessage.innerText = ""; // Clear errors

            // Send data to backend
            try {
                const response = await fetch("https://8080-idx-rame24-1738211022490.cluster-3g4scxt2njdd6uovkqyfcabgo6.cloudworkstations.dev/signup", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ username, email, password })
                });

                const data = await response.json();
                console.log(data);
                if (response.ok) {
                    alert(data.message);
                    document.getElementById("signupForm").reset();
                    window.location.href = "/login-page";
                } else {
                    errorMessage.innerText = data.message || "Signup failed.";
                }
            } catch (error) {
                errorMessage.innerText = "Error connecting to the server.";
            }
        });

        //authenthication check every time

    </script>
</body>

</html>